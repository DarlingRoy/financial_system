<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.financial_system.dao.RepositoryDao">

    <resultMap type="com.example.financial_system.entity.Repository" id="RepositoryMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="productId" column="product_id" jdbcType="INTEGER"/>
        <result property="configId" column="config_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="stock" column="stock" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="is_delete" jdbcType="BOOLEAN"/>
    </resultMap>
    
    <sql id="base_column_list">
        id, product_id, config_id, status, stock, create_time, is_delete    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="RepositoryMap">
        select
        <include refid="base_column_list" />
        
        from financial_system.repository
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RepositoryMap">
        select
        <include refid="base_column_list" />

        from financial_system.repository
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RepositoryMap">
        select
        <include refid="base_column_list" />

        from financial_system.repository

    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into financial_system.repository(product_id, config_id, status, stock, create_time, is_delete)
        values (#{productId}, #{configId}, #{status}, #{stock}, #{createTime}, #{isDelete})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update financial_system.repository
        <set>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="configId != null">
                config_id = #{configId},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="stock != null">
                stock = #{stock},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="isDelete != null">
                is_delete = #{isDelete},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from financial_system.repository where id = #{id}
    </delete>
    
    <!--选择性的新增列-->
    <insert id="insertSelective" keyProperty="id" useGeneratedKeys="true">
        insert into financial_system.repository
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="productId != null">
                product_id,
            </if>
            <if test="configId != null">
                config_id,
            </if>
            <if test="status != null and status != ''">
                status,
            </if>
            <if test="stock != null">
                stock,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="isDelete != null">
                is_delete,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="productId != null">
                #{productId},
            </if>
            <if test="configId != null">
                #{configId},
            </if>
            <if test="status != null and status != ''">
                #{status},
            </if>
            <if test="stock != null">
                #{stock},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="isDelete != null">
                #{isDelete},
            </if>
        </trim>        
    </insert>

</mapper>