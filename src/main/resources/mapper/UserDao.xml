<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.financial_system.dao.UserDao">

    <resultMap type="com.example.financial_system.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="departmentId" column="department_id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="is_delete" jdbcType="BOOLEAN"/>
    </resultMap>
    
    <sql id="base_column_list">
        id, department_id, username, password, email, phone, create_time, is_delete    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
        <include refid="base_column_list" />
        
        from financial_system.user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
        <include refid="base_column_list" />

        from financial_system.user
        limit #{offset}, #{limit}
    </select>

    <!--查询所有-->
    <select id="queryAll" resultMap="UserMap">
        select
        <include refid="base_column_list" />

        from financial_system.user
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into financial_system.user(username, password, email, phone, create_time, is_delete)
        values (#{username}, #{password}, #{email}, #{phone}, #{createTime}, #{isDelete})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update financial_system.user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="isDelete != null">
                is_delete = #{isDelete},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from financial_system.user where id = #{id}
    </delete>
    
    <!--选择性的新增列-->
    <insert id="insertSelective" keyProperty="id" useGeneratedKeys="true">
        insert into financial_system.user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">
                username,
            </if>
            <if test="password != null and password != ''">
                password,
            </if>
            <if test="email != null and email != ''">
                email,
            </if>
            <if test="phone != null and phone != ''">
                phone,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="isDelete != null">
                is_delete,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">
                #{username},
            </if>
            <if test="password != null and password != ''">
                #{password},
            </if>
            <if test="email != null and email != ''">
                #{email},
            </if>
            <if test="phone != null and phone != ''">
                #{phone},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="isDelete != null">
                #{isDelete},
            </if>
        </trim>        
    </insert>

    <!--根据用户名查询用户-->
    <select id="queryByUsername" resultMap="UserMap">
        select <include refid="base_column_list"/> from user where username=#{username}
    </select>

    <!--查询用户数目-->
    <select id="countUser" resultType="Integer">
        select count(*) from user
    </select>

</mapper>