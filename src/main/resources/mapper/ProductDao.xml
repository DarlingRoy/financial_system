        values (#{providerId}, #{productTypeId}, #{name}, #{price}, #{quota}, #{rateOfReturn}, #{startUpPoint}, #{publishDate}, #{stopIssuingDate}, #{duration}, #{riskLevel}, #{isDelete}, #{createTime}, #{reviewTime}, #{createOperator}, #{reviewOperator})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update financial_system.product
        <set>
            <if test="providerId != null">
                provider_id = #{providerId},
            </if>
            <if test="productTypeId != null">
