<mapper namespace="com.example.financial_system.dao.ProductDao">

    <resultMap type="com.example.financial_system.entity.Product" id="ProductMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="providerId" column="provider_id" jdbcType="INTEGER"/>
        <result property="productTypeId" column="product_type_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="quota" column="quota" jdbcType="INTEGER"/>
        <result property="rateOfReturn" column="rate_of_return" jdbcType="NUMERIC"/>
        <result property="startUpPoint" column="start_up_point" jdbcType="NUMERIC"/>
        <result property="publishDate" column="publish_date" jdbcType="TIMESTAMP"/>
        <result property="stopIssuingDate" column="stop_issuing_date" jdbcType="TIMESTAMP"/>
        <result property="duration" column="duration" jdbcType="INTEGER"/>
        <result property="riskLevel" column="risk_level" jdbcType="INTEGER"/>
        <result property="isDelete" column="is_delete" jdbcType="BOOLEAN"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="reviewTime" column="review_time" jdbcType="TIMESTAMP"/>
        <result property="createOperator" column="create_operator" jdbcType="INTEGER"/>
        <result property="reviewOperator" column="review_operator" jdbcType="INTEGER"/>
        <result property="providerName" column="provider_name" jdbcType="VARCHAR" />
        <result property="type" column="type" jdbcType="VARCHAR" />
    </resultMap>
    
    <sql id="base_column_list">
        id, provider_id, product_type_id, name, price, quota, rate_of_return, start_up_point, publish_date, stop_issuing_date, duration, risk_level, is_delete, create_time, review_time, create_operator, review_operator    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="ProductMap">
        select
        product.*, provider.name as provider_name, product_type.type
        from financial_system.product
        join financial_system.provider
          on product.provider_id=provider.id
        join financial_system.product_type
          on product.product_type_id=product_type.id
        where product.id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ProductMap">
        select
        <include refid="base_column_list" />

        from financial_system.product
        limit #{offset}, #{limit}
    </select>

    <!--查询所有-->
    <select id="queryAll" resultMap="ProductMap">
        select
        <include refid="base_column_list" />

        from financial_system.product
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
